@model AD.Models.ADDomain

@{
    ViewData["Title"] = "EditAD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Домен AD</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAD">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LdapFormat" class="control-label"></label>
                <input asp-for="LdapFormat" class="form-control" />
                <span asp-validation-for="LdapFormat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DomainName" class="control-label"></label>
                <input asp-for="DomainName" class="form-control" />
                <span asp-validation-for="DomainName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DomainControllerAddress" class="control-label"></label>
                <input asp-for="DomainControllerAddress" class="form-control" />
                <span asp-validation-for="DomainControllerAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
