@model AD.Controllers.ActiveDirectoryController.ActiveDirectoryModel;
@{
    ViewData["Title"] = "GetOUAD";
}

<div>
    <h4>Список OU</h4>
    <hr />
    <form method="post" action="@Url.Action("GetOUAD", "ActiveDirectory")">
        <button type="submit">загрузить OUs</button>
    </form>
    <form method="post" action="@Url.Action("SaveOU", "ActiveDirectory")">
        <button type="submit">Сохранить</button>

        <table class="table">
            <tr>
                <th>Выбрать</th>
                <th>OU Name</th>
                <th>OU Path</th>
            </tr>
            @for (int i = 0; i < Model.ADOUList.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(m => m.ADOUList[i].isChecked)
                        @Html.HiddenFor(m => m.ADOUList[i].OUName)
                        @Html.HiddenFor(m => m.ADOUList[i].OUPath)
                    </td>
                    <td>@Html.DisplayFor(m => m.ADOUList[i].OUName)</td>
                    <td>@Html.DisplayFor(m => m.ADOUList[i].OUPath)</td>
                </tr>
            }
        </table>
    </form>
</div>
