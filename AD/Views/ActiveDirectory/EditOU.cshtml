@model AD.Models.ADOU
@{
    ViewData["Title"] = "EditOU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Редактировать</h1>

<h4>AD OUs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOU">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="OUName" class="control-label"></label>
                <input asp-for="OUName" class="form-control" />
                <span asp-validation-for="OUName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OUPath" class="control-label"></label>
                <input asp-for="OUPath" class="form-control" />
                <span asp-validation-for="OUPath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
