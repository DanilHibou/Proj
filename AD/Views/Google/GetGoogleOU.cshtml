@model AD.Controllers.GoogleController.GoogleModel
@{
    ViewData["Title"] = "GetGoogleGroups";
}

<div>
    <h4>Список OU</h4>
    <hr />
    
    <form method="post" action="@Url.Action("GetGoogleOU", "Google")">
        <button type="submit">Загрузить OU</button>
       
    </form>
    <form method="post" action="@Url.Action("SaveOUGoogle", "Google")">
        <button type="submit">Save</button>
        <table class="table">
            <tr>
                <th>Выбрать</th>
                <th>Имя OU</th>
                <th>id OU</th>
                <th>путь OU</th>
            </tr>
            @for (int i = 0; i < Model.googleOUList.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(m => m.googleOUList[i].isChecked)
                        @Html.HiddenFor(m => m.googleOUList[i].OUName)
                        @Html.HiddenFor(m => m.googleOUList[i].OUid)
                        @Html.HiddenFor(m => m.googleOUList[i].OUPath)
                    </td>
                    <td>@Html.DisplayFor(m => m.googleOUList[i].OUName)</td>
                    <td>@Html.DisplayFor(m => m.googleOUList[i].OUid)</td>
                    <td>@Html.DisplayFor(m => m.googleOUList[i].OUPath)</td>
                </tr>
            }
        </table>
    </form>
</div>
